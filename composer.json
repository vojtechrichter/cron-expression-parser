{
    "name": "vojtechrichter/cron-expression-parser",
    "type": "library",
    "require": {
        "php": "^8.4"
    },
    "require-dev": {
        "phpstan/phpstan": "^2.1",
        "friendsofphp/php-cs-fixer": "^3.82"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Vojtechrichter\\CronExpressionParser\\": "src/"
        }
    },
    "authors": [
        {
            "name": "vojtechrichter",
            "email": "vojta3218@gmail.com"
        }
    ],
    "scripts": {
        "phpstan": "vendor/bin/phpstan analyse src -l 10 --memory-limit=1G",
        "cs": "vendor/bin/php-cs-fixer fix src",
        "lint": [
            "@phpstan",
            "@cs"
        ]
    }
}
